set $mod Mod4

set $opacity 0.9
set $left h
set $down t
set $up c
set $right n

set $term foot
set $menu fuzzel --no-icons | xargs swaymsg exec --

output * pos 3440 0
output DP-3 pos 1080 22 mode 3440x1440@144Hz bg ~/Dropbox/Wallpapers/wp1.jpg fill
#output DP-2 pos 4520 220 mode 1920x1080@144Hz bg ~/Dropbox/Wallpapers/lemans.jpeg fill
output DP-1 pos 4520 220 mode 1920x1080@144Hz bg ~/Dropbox/Wallpapers/wolf.jpg fill
output DP-2 transform 270 pos 0 0 mode 1920x1080@144Hz bg ~/Dropbox/Wallpapers/spa-vertical.jpg fill



#bindsym $mod+tab output 'DP-2' toggle; output 'DP-1' toggle

workspace personal output DP-3
workspace media output DP-3
workspace work output DP-3
workspace personal-view output DP-1
workspace media-view output DP-1
workspace work-view output DP-1
workspace personal-v output DP-2
workspace media-v output DP-2
workspace work-v output DP-2
workspace trash output DP-2

input type:keyboard {
    xkb_layout us,ru
    xkb_variant dvorak,
    xkb_options grp:rctrl_rshift_toggle
}

# Start a terminal
bindsym $mod+Return exec $term

# Kill focused window
bindsym $mod+q kill

# Start your launcher
bindsym $mod+m exec $menu

bindsym $mod+p exec grim -g "$(slurp)" - | wl-copy
bindsym $mod+y exec grim -g "$(slurp)" - | swappy -f - | wl-copy

# Dismiss all notifications
bindsym $mod+escape exec makoctl dismiss -a

# Moving windows
floating_modifier $mod normal

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+e exec swaynag -t warning -m 'Exit?' -B 'Yes, exit sway' 'swaymsg exit'

# Move your focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Move the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# Switch to workspace
bindsym $mod+1 workspace personal
bindsym $mod+2 workspace media
bindsym $mod+3 workspace work
bindsym $mod+apostrophe workspace personal-view
bindsym $mod+comma workspace media-view
bindsym $mod+period workspace work-view
bindsym $mod+a workspace personal-v
bindsym $mod+o workspace media-v
bindsym $mod+semicolon workspace work-v
bindsym $mod+9 workspace trash

bindsym $mod+Control+Left workspace personal
bindsym $mod+Control+Right workspace media

# Move to workspace
bindsym $mod+Shift+1 move container to workspace personal
bindsym $mod+Shift+2 move container to workspace media
bindsym $mod+Shift+3 move container to workspace work
bindsym $mod+Shift+apostrophe move container to workspace personal-view
bindsym $mod+Shift+comma move container to workspace media-view
bindsym $mod+Shift+period move container to workspace work-view
bindsym $mod+Shift+a move container to workspace personal-v
bindsym $mod+Shift+o move container to workspace media-v
bindsym $mod+Shift+semicolon move container to workspace work-v
bindsym $mod+Shift+9 move container to workspace trash

# Split vertically or horizontally
bindsym $mod+b splith
bindsym $mod+v splitv

# Different layouts for current container
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Make the current focus fullscreen
bindsym $mod+f fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $mod+Shift+space floating toggle

# Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle

# Move focus to the parent container
#bindsym $mod+a focus parent

# Move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

bindsym $mod+l exec curl -X POST http://localhost:8080/api/v2/transfer/toggleSpeedLimitsMode

bindsym $mod+grave exec swaymsg "[con_id=$(swaymsg -t get_tree | jq -r '.. | select(.focused? == true) | .id')]" opacity 0.8
bindsym $mod+shift+grave exec swaymsg "[con_id=$(swaymsg -t get_tree | jq -r '.. | select(.focused? == true) | .id')]" opacity 1
bindsym $mod+ctrl+grave exec swaymsg "[con_id=$(swaymsg -t get_tree | jq -r '.. | select(.focused? == true) | .id')]" opacity 0.4

# Resizing (mod+r)
bindsym $mod+r mode "resize"
mode "resize" {
    bindsym $left resize grow width 100px
    bindsym $down resize shrink height 100px
    bindsym $up resize grow height 100px
    bindsym $right resize shrink width 100px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Special keys to adjust volume via PulseAudio
bindsym --locked XF86AudioMute exec pactl set-sink-mute \@DEFAULT_SINK@ toggle
bindsym --locked XF86AudioLowerVolume exec pactl set-sink-volume \@DEFAULT_SINK@ -5%
bindsym --locked XF86AudioRaiseVolume exec pactl set-sink-volume \@DEFAULT_SINK@ +5%
bindsym --locked XF86AudioMicMute exec pactl set-source-mute \@DEFAULT_SOURCE@ toggle
bindsym --locked XF86AudioPrev exec playerctl previous
bindsym --locked XF86AudioNext exec playerctl next
bindcode 172 exec playerctl play-pause

# Special keys to adjust brightness via brightnessctl
bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym --locked XF86MonBrightnessUp exec brightnessctl set 5%+

# Special key to take a screenshot with grim
bindsym Print exec grim

# Status bar
bar {
    position top
    output DP-3
    output DP-1

    status_command ~/.local/bin/status.sh

    colors {
        statusline #ffeeaa
        background #222222aa
        inactive_workspace #22222200 #22222200 #5c5c5c
        focused_workspace #22222200 #cc370baa #ffffff
    }

    tray_padding 2
    font pango:DejaVu Sans Mono 14
    separator_symbol "  "
}

bar {
    position top
    output DP-2

    status_command ~/.local/bin/status-music.sh

    colors {
        statusline #ffeeaa
        background #222222aa
        inactive_workspace #22222200 #22222200 #5c5c5c
        focused_workspace #22222200 #cc370baa #ffffff
    }

    tray_padding 2
    font pango:DejaVu Sans Mono 14
    separator_symbol "  "
}

client.focused #75392133 #a3370baa #eeeeee
client.unfocused #75392133 #382118aa #eeeeee
client.focused_inactive #75392133 #784f3e #eeeeee

include /etc/sway/config.d/*

gaps inner 2
gaps outer 5

